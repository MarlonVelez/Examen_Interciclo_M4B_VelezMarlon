<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ListaProveedor">

    <Button
            android:text="Refrescar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnRefrescar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textAllCaps="false"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toTopOf="@+id/listaProveedores"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="413dp"
            android:layout_height="536dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/listaProveedores" app:layout_constraintHorizontal_bias="0.4"
    />
</androidx.constraintlayout.widget.ConstraintLayout>